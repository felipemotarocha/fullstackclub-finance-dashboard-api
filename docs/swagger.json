            "patch": {
                "summary": "Update transaction by ID",
                "tags": ["Transaction"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "transactionId",
                        "required": true,
                        "type": "string",
                        "description": "ID of the transaction to update"
